# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/express-boilerplate
MONGODB_URI_TEST=mongodb://localhost:27017/express-boilerplate-test

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Cors
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX=100
